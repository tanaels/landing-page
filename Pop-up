<!-- Modal de Inscrição -->
<div id="signup-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white p-8 rounded-xl shadow-lg max-w-lg text-center relative">
        <button id="close-modal" class="absolute top-2 right-3 text-gray-600 text-xl">&times;</button>
        <h1 class="text-3xl font-bold text-gray-800">Melhore Seu Relacionamento Agora</h1>
        <p class="text-gray-600 mt-2">Garanta sua vaga na pré-venda e transforme sua vida amorosa com nosso método exclusivo.</p>
        <form id="signup-form" class="mt-6">
            <input type="email" id="email" placeholder="Digite seu e-mail" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            <input type="tel" id="phone" placeholder="Digite seu telefone" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3" required>
            <button type="submit" class="w-full bg-blue-600 text-white py-3 mt-4 rounded-lg hover:bg-blue-700 transition">Quero me inscrever</button>
        </form>
        <p class="text-sm text-gray-500 mt-4">Suas informações estão seguras. Sem spam!</p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const modal = document.getElementById("signup-modal");
        const closeModal = document.getElementById("close-modal");

        // Exibir o popup automaticamente ao carregar a página
        setTimeout(() => {
            modal.classList.remove("hidden");
        }, 1000); // Mostra após 1 segundo

        // Fechar o modal
        closeModal.addEventListener("click", () => {
            modal.classList.add("hidden");
        });

        // Inicialização do EmailJS
        emailjs.init("Jjwi7ghqfOXmMcHrU"); // Substitua pelo seu User ID do EmailJS

        // Lógica de envio do formulário
        document.getElementById("signup-form").addEventListener("submit", function (event) {
            event.preventDefault();
            
            const email = document.getElementById("email").value;
            const phone = document.getElementById("phone").value;

            // Envio dos dados via EmailJS
            emailjs.sendForm("service_3wygkdc", "template_yd81j09", this)
                .then(response => {
                    alert("Pré-inscrição realizada com sucesso! Verifique seu e-mail para mais informações.");
                    modal.classList.add("hidden"); // Fecha o modal após o envio
                }, error => {
                    alert("Erro ao enviar. Tente novamente mais tarde.");
                });
        });
    });
</script>
